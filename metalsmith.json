{
  "metadata": {
    "title": "Dana Woodman",
    "description": "Thoughts on code"
  },
  "plugins": {
    "metalsmith-clean-css": {
      "files": "src/**/*.css"
    },
    "metalsmith-date-formatter": {
      "dates": [
        {
          "key": "date",
          "format": "LL"
        }
      ]
    },
    "metalsmith-collections": {
      "articles": {
        "pattern": "articles/**/*.md",
        "sortBy": "date",
        "reverse": true
      }
    },
    "metalsmith-in-place": {
      "engine": "handlebars",
      "partials": "partials",
      "pattern": "**/*.md"
    },
    "metalsmith-markdown": {
      "smartypants": true,
      "gfm": true,
      "tables": true
    },
    "metalsmith-static": {
      "src": "public",
      "dest": "."
    },
    "metalsmith-layouts": {
      "default": "default.html",
      "engine": "handlebars",
      "partials": "partials",
      "pattern": "**/*.html"
    },
    "metalsmith-permalinks": true
  }
}
